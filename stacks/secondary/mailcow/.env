COMPOSE_PROJECT_NAME=mailcow

# Timezone
TZ=UTC

# Mail host
MAILCOW_HOSTNAME=mail.example.com

# Network (IPv4 /24 prefix only, no last octet)
IPV4_NETWORK=172.22.1

# Database
DBROOT=change_this_root_pw
DBNAME=mailcow
DBUSER=mailcow
DBPASS=change_this_db_pw

# Redis
REDISPASS=change_this_redis_pw

# Optional API keys (set later if needed)
API_KEY=invalid
API_KEY_READ_ONLY=invalid
API_ALLOW_FROM=invalid

# HTTP/HTTPS
HTTP_PORT=18081
HTTPS_PORT=18444
HTTP_BIND=
HTTPS_BIND=
ENABLE_IPV6=true

# ACME / Let's Encrypt
SKIP_LETS_ENCRYPT=n
LE_STAGING=n
DIRECTORY_URL=
ADDITIONAL_SAN=
AUTODISCOVER_SAN=y
ONLY_MAILCOW_HOSTNAME=n

# Service toggles (leave defaults unless you know you need changes)
SKIP_FTS=y
SKIP_CLAMD=n
SKIP_OLEFY=n
SKIP_SOGO=n
ALLOW_ADMIN_EMAIL_LOGIN=n
DEV_MODE=n
DEMO_MODE=n
WEBAUTHN_ONLY_TRUSTED_VENDORS=n
ENABLE_SSL_SNI=n
SKIP_IP_CHECK=n
SKIP_HTTP_VERIFICATION=n

# Ports (defaults are fine; override only if needed)
IMAP_PORT=143
IMAPS_PORT=993
POP_PORT=110
POPS_PORT=995
SIEVE_PORT=4190
SMTP_PORT=25
SMTPS_PORT=465
SUBMISSION_PORT=587

# Misc
LOG_LINES=9999
MAILCOW_PASS_SCHEME=BLF-CRYPT

