# Required: Admin password for OpenCloud
INITIAL_ADMIN_PASSWORD=admin123*pass

# OpenCloud domain and URL (no TLS, proxied)
OC_DOMAIN=cloud.opencloud.test
OC_URL=http://cloud.opencloud.test

# JWT secret (change to a truly random string in production)
OCIS_JWT_SECRET=SuperSecretLongRandomString123!abc

# Persistent config/data directories
OC_CONFIG_DIR=/storage/secondary/opencloud/config
OC_DATA_DIR=/storage/secondary/opencloud/data

# Logging (optional)
LOG_LEVEL=info
LOG_PRETTY=true